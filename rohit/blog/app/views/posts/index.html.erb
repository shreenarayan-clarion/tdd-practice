<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table border="1">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>Title</td>
      <td>Content</td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <% @posts.each do |post| %>
      <tr id="post_<%= post.id %>">
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
