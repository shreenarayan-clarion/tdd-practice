- @transactions.each do |transaction|
  .row
    %fieldset
      %legend
      .col-md-5
        .form-group
          %label.control-label.col-sm-4{:for => ""}
            Title
            %span.required
          .col-sm-7
            = text_field_tag "transactions[#{transaction.id}][quotation_title]" , transaction.quotation_title, data: {'rule-required' => true, 'rule-maxlength' => 35, 'msg-maxlength' => "Maximum 35 characters", title: "Maximum 35 characters", 'rule-validName' => true, 'rule-uniqeName' => 'title' }, class: "form-control", maxlength: 35
        .form-group
          %label.control-label.col-sm-4{:for => ""}
            Qantity
            %span.required
          .col-sm-7
            = text_field_tag "transactions[#{transaction.id}][quotation_quantity]" , transaction.quotation_quantity, data: {'rule-required' => true, 'rule-number' => true,'rule-RealNumber'=> true, 'rule-maxlength' => 3, 'msg-maxlength' => "Maximum 3 digits", title: "Maximum 3 digits" }, class: "form-control input_tooltip", maxlength: 3
        .form-group
          %label.control-label.col-sm-4{:for => ""}
            Price
            %span.required
          .col-sm-7
            = text_field_tag "transactions[#{transaction.id}][quotation_price]" , transaction.quotation_price, data: {'rule-required' => true, 'rule-number' => true, 'rule-number' => true, 'rule-maxlength' => 14, 'msg-maxlength' => "Maximum 14 digits", title: "Maximum 14 digits" }, class: "form-control input_tooltip", maxlength: 14
      .col-md-5
        .form-group
          %label.control-label.col-sm-4{:for => ""}
            Description
            %span.required
          .col-sm-7
            = text_area_tag "transactions[#{transaction.id}][quotation_description]" , transaction.quotation_description, data: { 'rule-required' => true, 'rule-maxlength' => 255, 'msg-maxlength' => "Maximum 255 characters", title: "Maximum 255 characters" }, class: "form-control input_tooltip", style: "height:140px", maxlength: 255

  .row
    %fieldset
      %legend