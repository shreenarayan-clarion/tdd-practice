= bootstrap_form_for @client, layout: :horizontal, label_col: "col-sm-3",control_col: "col-sm-6", html: { class: 'validate-form' } do |f|

  %table.width-50
    %tr
      %td
        = f.text_field :name, data: { 'rule-required' => true, 'rule-maxlength' => 35, 'msg-maxlength' => "Maximum 35 characters", title: "Maximum 35 characters", 'rule-validName' => true }, class: "input_tooltip", :label => "Name<span class='required'/>".html_safe, maxlength: 35
    %tr
      %td
        = f.text_area :projects, data: { title: "Put comma separator to add more projects", 'rule-validDescription' => true, 'msg-validDescription' => "Please enter valid project name(s)" }, class: "input_tooltip"

  .actions
    = f.button(type: 'submit', class: "btn btn-success") do
      %i{ class: "glyphicon glyphicon-ok" }
      Save
    = link_to '<span class="glyphicon glyphicon-arrow-left"></span> Back'.html_safe, clients_path, class: "btn btn-primary"
