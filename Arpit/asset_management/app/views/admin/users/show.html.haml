%h3 User Details

%table.width-100
  %tr
    %th
      Email:
    %td
      = @user.email
  %tr
    %th
      Name:
    %td
      = @user.employee.try(:name)
  %tr
    %th
      Login Count:
    %td
      = @user.sign_in_count
  %tr
    %th
      Last Sign In:
    %td
      = custom_time_ago_in_words(@user.last_sign_in_at)
  %tr
    %th
      Created Date:
    %td
      = @user.created_at.try(:strftime, '%b %d, %Y')
  %tr
    %th
      Last Updated:
    %td
      = @user.updated_at.try(:strftime, '%b %d, %Y')

%br
= link_to '<span class="glyphicon glyphicon-pencil "></span> Edit'.html_safe, edit_admin_user_path(@user), class: "btn btn-success" if @user.active?
= link_to '<span class="glyphicon glyphicon-arrow-left"></span> Back'.html_safe, admin_users_path, class: "btn btn-primary"
