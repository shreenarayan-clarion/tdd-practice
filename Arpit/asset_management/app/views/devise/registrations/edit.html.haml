%h2
  = resource_name.to_s.humanize
= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal, control_col: "col-sm-3") do |f|
  = f.email_field :email, autofocus: true, placeholder: "Enter email"
  = f.password_field :password, autocomplete: "off", placeholder: "Enter password"
  = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter password confirmation"
  = f.password_field :current_password, autocomplete: "off", placeholder: 'Enter current password'
  .form-group{style:"text-align:right"}
    .col-sm-5
      = f.submit "Update", class: "btn btn-success"
      = link_to '<span class="glyphicon glyphicon-arrow-left"></span> Back'.html_safe, '#', class: "btn btn-primary"
