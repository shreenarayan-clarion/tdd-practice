%h3 Sign Up?

= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal, control_col: "col-sm-3", html: { class: 'validate-form' }) do |f|
  = f.email_field :email, autofocus: true, data: { 'rule-required' => true, 'rule-email'=> true, 'msg-email' => "Please enter a valid email" }, placeholder: "Enter email"
  = f.password_field :password, autocomplete: "off", data: { 'rule-required' => true, 'rule-minlength'=> 8, 'msg-minlength' => "Minimum is 8 characters", 'msg-minlength' => "Minimum 8 characters required", 'rule-maxlength'=> 15, 'msg-maxlength' => "Maximum 15 characters allowed", title: "Minimum 8 and Maximum 15 characters" }, class: "input_tooltip", placeholder: "Enter password", maxlength: 15
  = f.password_field :password_confirmation, autocomplete: "off",data: { 'rule-required' => true, 'rule-equalTo'=> "#user_password", 'msg-equalTo' => "Does not match with password", 'rule-minlength'=> 8, 'msg-minlength' => "Minimum is 8 characters", 'msg-minlength' => "Minimum 8 characters required", 'rule-maxlength'=> 15, 'msg-maxlength' => "Maximum 15 characters allowed", title: "Minimum 8 and Maximum 15 characters" }, class: "input_tooltip", placeholder: "Enter password confirmation", label: "Confirm Password", maxlength: 15
  .form-group{style:"text-align:right"}
    .col-sm-5
      = f.submit "Sign Up", class: "btn btn-success"
      = link_to '<span class="glyphicon glyphicon-arrow-left"></span> Back'.html_safe, new_user_session_path, class: "btn btn-primary"
