
= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:'form-horizontal', role: 'form'}) do |f|
  .form-group
    %label.col-sm-1.col-sm-offset-3.control-label
      %span.glyphicon.glyphicon-user
    .col-sm-5
      = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email"
  .form-group
    %label.col-sm-1.col-sm-offset-3.control-label
      %span.glyphicon.glyphicon-lock
    .col-sm-5
      = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password"
  - if devise_mapping.rememberable?
    .form-group{style:"text-align:right"}
      .col-sm-9.checkbox
        %label
          = f.check_box :remember_me
          Remeber me
  .form-group{style:"text-align:right"}
    .col-sm-9
      = f.submit "Sign In", class: "btn btn-primary"
      = link_to 'Sign Up', new_registration_path(resource_name), class: "btn btn-success"
      = render "devise/shared/links"