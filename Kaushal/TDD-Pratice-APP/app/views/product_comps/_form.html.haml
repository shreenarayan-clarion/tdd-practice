- url = @product_comp.try(:id).present? ? product_product_comp_path(@product, @product_comp) : product_product_comps_path(@product)
= bootstrap_form_for(@product_comp, url: url, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-5") do |f|
  = f.hidden_field :admin_id, value: current_admin.id
  = f.text_field :name, :autofocus => true
  = f.text_field :description
  = f.text_field :image
  = f.submit 'Save', class: 'btn btn-default', data: {disable_with: 'Save'}
  = link_to 'Back', product_product_comps_path, class: 'btn btn-default'