.border-form-div.invite-form-div
  %h2
    Forgot your password?
  = bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'form-horizontal', method: :post}, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-5") do |f|
    = f.text_field :email
    = f.submit 'Send me reset password instructions', class: 'btn btn-primary', data: {disable_with: 'Send me reset password instructions'}

